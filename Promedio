
n=int(input("Ingresar el numero a promediar "))
suma=0
l=[]

for i in range(n):
    numero=int(input("ingresar el numero a promediar "))
    l.append(numero)

for k in range(len(l)):
  suma=suma+l[k]
      
print("El promedio es: ", suma/n)




# codigo para saber promedio final de notas en los cursos
x= str(input("Ingrese el curso: "))

if x=="Mate":
    s=0
    for i in range (4):
    y=int(input("Ingresar nota"))
    s=s+y
promedio_mate=s/4

    

# Código para saber si aprobó Matemáticas

if promedio_mate>13:
    print("Ha pasado el curso satisfactoriamente con un promedio de:", promedio_mate)
if 13>=promedio_mate>=11
    print("Puede rendir un último examen opcional para levantar su promedio")
else:
    print("Porfavor acercarse a hablar con el maestro sobre su promedio")

